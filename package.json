{
  "name": "root",
  "private": true,
  "devDependencies": {
    "commitizen": "^4.2.4",
    "conventional-changelog": "^3.1.24",
    "cz-lerna-changelog": "^2.0.3",
    "lerna": "^4.0.0"
  },
  "workspaces": [
    "packages",
    "packages/*",
    "website",
    "websitevuepress"
  ],
  "dependencies": {
    "element-ui": "^2.15.6",
    "vue-property-decorator": "^9.1.2"
  },
  "scripts": {
    "commit": "git-cz",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "changelog": {
    "repo": "Linya-IronMan/MyElement",
    "labels": {
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "docs": "Refine Doc",
      "feat": "New Feature"
    },
    "cacheDir": ".changelog"
  }
}
